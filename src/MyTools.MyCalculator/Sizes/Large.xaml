<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <!-- Window size -->
  <sys:Double x:Key="AppWindowWidth">700</sys:Double>
  <sys:Double x:Key="AppWindowHeight">860</sys:Double>
  <sys:Double x:Key="AppScale">1.20</sys:Double>

  <!-- Keypad button sizes -->
  <sys:Double x:Key="PadButtonWidth">80</sys:Double>
  <sys:Double x:Key="PadButtonHeight">80</sys:Double>
  <sys:Double x:Key="PadButtonFontSize">22</sys:Double>

  <!-- Text sizes -->
  <sys:Double x:Key="FormulaFontSize">26</sys:Double>
  <sys:Double x:Key="ResultFontSize">20</sys:Double>

  <!-- Scientific pad layout -->
  <Thickness x:Key="SciNumericPadMargin">0,0,0,0</Thickness>
  <Thickness x:Key="SciSeparatorMargin">0,10,0,10</Thickness>
</ResourceDictionary>
