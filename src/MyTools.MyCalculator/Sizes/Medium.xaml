<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <!-- Window size -->
  <sys:Double x:Key="AppWindowWidth">560</sys:Double>
  <sys:Double x:Key="AppWindowHeight">600</sys:Double>
  <sys:Double x:Key="AppScale">1.00</sys:Double>

  <!-- Keypad button sizes -->
  <sys:Double x:Key="PadButtonWidth">64</sys:Double>
  <sys:Double x:Key="PadButtonHeight">64</sys:Double>
  <sys:Double x:Key="PadButtonFontSize">18</sys:Double>

  <!-- Text sizes -->
  <sys:Double x:Key="FormulaFontSize">22</sys:Double>
  <sys:Double x:Key="ResultFontSize">18</sys:Double>

  <!-- Scientific pad layout -->
  <Thickness x:Key="SciNumericPadMargin">0,0,0,0</Thickness>
  <Thickness x:Key="SciSeparatorMargin">0,8,0,8</Thickness>
</ResourceDictionary>
