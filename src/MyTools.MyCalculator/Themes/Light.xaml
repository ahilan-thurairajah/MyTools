<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Base colors -->
  <SolidColorBrush x:Key="AccentBrush" Color="#FF3F51B5"/>
  <SolidColorBrush x:Key="AccentBrushLight" Color="#FF5C6BC0"/>
  <SolidColorBrush x:Key="AccentBrushDark" Color="#FF303F9F"/>
  <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FFFDFDFD" Offset="0"/>
    <GradientStop Color="#FFF0F0F0" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF111111"/>
  <SolidColorBrush x:Key="BorderBrush" Color="#22000000"/>
  <!-- Calculator look -->
  <LinearGradientBrush x:Key="CalculatorBezelBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FF3C4959" Offset="0"/>
    <GradientStop Color="#FF2E3946" Offset="1"/>
  </LinearGradientBrush>
  <LinearGradientBrush x:Key="CalculatorScreenBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FFEFF8E1" Offset="0"/>
    <GradientStop Color="#FFDDEED1" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="ScreenTextBrush" Color="#FF113311"/>

  <!-- Global -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
  </Style>

  <!-- Buttons -->
  <Style TargetType="Button">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrushLight}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- TextBox -->
  <Style TargetType="TextBox">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
  </Style>

  <!-- Shadow color for effects -->
  <Color x:Key="ShadowColor">#66000000</Color>

  <!-- StatusBar -->
  <Style TargetType="StatusBar">
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <!-- Square keypad buttons -->
  <Style x:Key="SquarePadButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Width" Value="{DynamicResource PadButtonWidth}"/>
    <Setter Property="Height" Value="{DynamicResource PadButtonHeight}"/>
    <Setter Property="FontSize" Value="{DynamicResource PadButtonFontSize}"/>
    <Setter Property="Background" Value="#FFFDFDFD"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Border.Effect>
              <DropShadowEffect Color="{StaticResource ShadowColor}" Opacity="0.25" BlurRadius="10" ShadowDepth="1"/>
            </Border.Effect>
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrushLight}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Functional variations -->
  <Style x:Key="FuncPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FFF5F8FF"/>
    <Setter Property="BorderBrush" Value="#FF90A4AE"/>
    <Setter Property="FontSize" Value="{DynamicResource PadButtonFontSize}"/>
  </Style>
  <Style x:Key="OpPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FFE3F2FD"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
  </Style>
  <Style x:Key="WarnPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FFFFEBEE"/>
    <Setter Property="BorderBrush" Value="#FFD32F2F"/>
    <Setter Property="Foreground" Value="#FFB71C1C"/>
  </Style>

</ResourceDictionary>
