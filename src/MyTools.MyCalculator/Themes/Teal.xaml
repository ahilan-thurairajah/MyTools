<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <SolidColorBrush x:Key="AccentBrush" Color="#FF009688"/>
  <SolidColorBrush x:Key="AccentBrushLight" Color="#FF4DB6AC"/>
  <SolidColorBrush x:Key="AccentBrushDark" Color="#FF00796B"/>
  <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
  <GradientStop Color="#FFF5FFFC" Offset="0"/>
  <GradientStop Color="#FFE3F4F1" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF0B0B0B"/>
  <SolidColorBrush x:Key="BorderBrush" Color="#22000000"/>

  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
  </Style>

  <!-- Calculator look to match teal/orange -->
  <LinearGradientBrush x:Key="CalculatorBezelBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FF3B4B4B" Offset="0"/>
    <GradientStop Color="#FF2E3C3C" Offset="1"/>
  </LinearGradientBrush>
  <LinearGradientBrush x:Key="CalculatorScreenBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FFE7FFF5" Offset="0"/>
    <GradientStop Color="#FFD2F5E9" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="ScreenTextBrush" Color="#FF0E3428"/>

  <Style TargetType="Button">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrushLight}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
  </Style>

  <Style TargetType="StatusBar">
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <Style x:Key="SquarePadButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Width" Value="{DynamicResource PadButtonWidth}"/>
    <Setter Property="Height" Value="{DynamicResource PadButtonHeight}"/>
    <Setter Property="FontSize" Value="{DynamicResource PadButtonFontSize}"/>
    <Setter Property="Background" Value="#FFFDFDFD"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Border.Effect>
              <DropShadowEffect Color="#66000000" Opacity="0.25" BlurRadius="10" ShadowDepth="1"/>
            </Border.Effect>
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrushLight}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Functional variations for keypad -->
  <Style x:Key="FuncPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FFF0FFFB"/>
    <Setter Property="BorderBrush" Value="#FF4DB6AC"/>
  </Style>
  <Style x:Key="OpPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FFE8F7F5"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
  </Style>
  <Style x:Key="WarnPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FFFFF3E0"/>
    <Setter Property="BorderBrush" Value="#FFFFA726"/>
    <Setter Property="Foreground" Value="#FFEF6C00"/>
  </Style>
</ResourceDictionary>
