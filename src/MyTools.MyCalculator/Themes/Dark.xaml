<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Indigo / Amber palette -->
  <SolidColorBrush x:Key="AccentBrush" Color="#FF3F51B5"/>
  <SolidColorBrush x:Key="AccentBrushLight" Color="#FF5C6BC0"/>
  <SolidColorBrush x:Key="AccentBrushDark" Color="#FF303F9F"/>
  <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FF262626" Offset="0"/>
    <GradientStop Color="#FF1C1C1C" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FF2A2A2A"/>
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFF0F0F0"/>
  <SolidColorBrush x:Key="BorderBrush" Color="#33FFFFFF"/>

  <!-- Calculator look (dark) -->
  <LinearGradientBrush x:Key="CalculatorBezelBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FF2E323B" Offset="0"/>
    <GradientStop Color="#FF232730" Offset="1"/>
  </LinearGradientBrush>
  <LinearGradientBrush x:Key="CalculatorScreenBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#FF1F2A1F" Offset="0"/>
    <GradientStop Color="#FF162116" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="ScreenTextBrush" Color="#FFDDEED4"/>

  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
  </Style>

  <Style TargetType="Button">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrushDark}"/>
              <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
              <Setter Property="Foreground" Value="Black"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushLight}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Background" Value="#FF1B1B1B"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
  </Style>

  <Style TargetType="StatusBar">
  <Setter Property="Background" Value="{StaticResource AccentBrushDark}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
  </Style>

  <Style x:Key="SquarePadButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Width" Value="{DynamicResource PadButtonWidth}"/>
    <Setter Property="Height" Value="{DynamicResource PadButtonHeight}"/>
    <Setter Property="FontSize" Value="{DynamicResource PadButtonFontSize}"/>
    <Setter Property="Background" Value="#FF2F2F2F"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
    <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
      <Border x:Name="Chrome" CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Border.Effect>
              <DropShadowEffect Color="#AA000000" Opacity="0.35" BlurRadius="12" ShadowDepth="1"/>
            </Border.Effect>
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrushDark}"/>
              <Setter Property="Foreground" Value="White"/>
        <Setter TargetName="Chrome" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        <Setter TargetName="Chrome" Property="BorderThickness" Value="2"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
              <Setter Property="Foreground" Value="Black"/>
        <Setter TargetName="Chrome" Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
        <Setter TargetName="Chrome" Property="BorderThickness" Value="2"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Functional variations for keypad -->
  <Style x:Key="FuncPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FF2C2F36"/>
    <Setter Property="BorderBrush" Value="#FF4B5565"/>
  </Style>
  <Style x:Key="OpPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <Setter Property="Background" Value="#FF2B2F42"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrushLight}"/>
  </Style>
  <Style x:Key="WarnPadButton" TargetType="Button" BasedOn="{StaticResource SquarePadButton}">
    <!-- Amber emphasize for clear -->
    <Setter Property="Background" Value="#33FFC107"/>
    <Setter Property="BorderBrush" Value="#FFFFC107"/>
    <Setter Property="Foreground" Value="#FFFFE082"/>
  </Style>
</ResourceDictionary>
