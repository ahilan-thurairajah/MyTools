<Window x:Class="MyTools.MyCalculator.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="420" Width="420" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="16" Orientation="Vertical">
        <TextBlock Text="Theme" FontWeight="SemiBold" Margin="0,0,0,8"/>
    <ComboBox x:Name="ThemeCombo" SelectedIndex="0">
            <ComboBoxItem Content="Light (Blue/Lime)"/>
            <ComboBoxItem Content="Dark (Indigo/Amber)"/>
            <ComboBoxItem Content="Light (Teal/Orange)"/>
        </ComboBox>
        <Separator Margin="0,12,0,12"/>
        <TextBlock Text="Size" FontWeight="SemiBold" Margin="0,0,0,8"/>
    <ComboBox x:Name="SizeCombo" SelectedIndex="1">
            <ComboBoxItem Content="Small"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Large"/>
        </ComboBox>
        <Separator Margin="0,12,0,12"/>
        <TextBlock Text="Mode" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <ComboBox x:Name="ModeCombo" SelectedIndex="0">
            <ComboBoxItem Content="General"/>
            <ComboBoxItem Content="Scientific"/>
            <ComboBoxItem Content="Financial"/>
        </ComboBox>
        <TextBlock Text="History limit" FontWeight="SemiBold" Margin="0,12,0,8"/>
        <TextBox x:Name="HistoryLimitText" Text="100" Width="100"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0" >
            <Button Content="Cancel" Width="80" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Apply" Width="80" IsDefault="True" Click="Apply_Click"/>
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Window>
