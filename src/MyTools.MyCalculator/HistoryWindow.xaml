<Window x:Class="MyTools.MyCalculator.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="History" Height="400" Width="420" WindowStartupLocation="CenterOwner">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Margin="8,8,8,0">
      <TextBlock Text="Double-click a row to reuse the formula"/>
      <DockPanel Margin="0,6,0,0">
        <TextBox x:Name="SearchBox" Width="220" Height="26" Margin="0,0,6,0"/>
        <Button Content="Search" Width="80" Click="Search_Click"/>
        <Button Content="Clear" Width="70" Margin="6,0,0,0" Click="ClearSearch_Click"/>
      </DockPanel>
    </StackPanel>
    <ListView x:Name="HistoryList" Margin="8" MouseDoubleClick="HistoryList_MouseDoubleClick">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="#" Width="40" DisplayMemberBinding="{Binding Id}"/>
          <GridViewColumn Header="Use" Width="40" DisplayMemberBinding="{Binding UsageCount}"/>
          <GridViewColumn Header="Expression" Width="230" DisplayMemberBinding="{Binding Expression}"/>
          <GridViewColumn Header="Result" Width="90" DisplayMemberBinding="{Binding Result}"/>
        </GridView>
      </ListView.View>
    </ListView>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8" DockPanel.Dock="Bottom">
      <Button Content="Close" Width="80" IsCancel="True"/>
    </StackPanel>
  </DockPanel>
</Window>
