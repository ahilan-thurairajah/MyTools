{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "MyTools.sln",
        "-c",
        "${config:dotnet.defaultConfiguration}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "MyTools.sln",
        "-c",
        "${config:dotnet.defaultConfiguration}",
        "--nologo"
      ],
      "group": "test",
      "problemMatcher": ["$msCompile"]
    }
  ]
}
