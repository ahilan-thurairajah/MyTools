{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "MyTools.sln",
        "-c",
        "${config:dotnet.defaultConfiguration}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "MyTools.sln",
        "-c",
        "${config:dotnet.defaultConfiguration}",
        "--nologo"
      ],
      "group": "test",
      "problemMatcher": ["$msCompile"]
    }
    ,
    {
  "label": "publish: MyCalculator (Release x64 single-file)",
      "type": "shell",
      "command": "dotnet",
      "args": [
  "publish",
  "src/MyTools.MyCalculator/MyTools.MyCalculator.csproj",
        "-c",
        "Release",
        "-r",
        "win-x64",
        "--self-contained",
        "true",
        "-p:PublishSingleFile=true",
        "-p:IncludeNativeLibrariesForSelfExtract=true",
        "-o",
        "installer/app"
      ],
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "installer: build (Inno Setup)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "installer/build-installer.ps1",
        "-Configuration",
        "Release"
      ]
    },
    {
      "label": "installer: open output",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "Start-Process explorer.exe 'installer/output'"
      ]
    }
  ]
}
